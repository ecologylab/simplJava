<meta_metadata_repository name="test_local_mmd_scopes" package="ecologylab.semantics.generated.test.test_local_mmd_scopes.publication">

	<meta_metadata name="publication" extends="compound_document" comment="A publication.">
		<collection name="authors" child_type="author" schema_org_itemprop="author"/>
		<composite name="publisher" type="publisher" schema_org_itemprop="publisher"/>
		<scalar name="pages" scalar_type="String" />
		<scalar name="isbn" scalar_type="String" />
		<scalar name="year" scalar_type="Int" />
		<collection name="subjects" child_type="subject" child_extends="metadata">
			<scalar name="subject" as_composite_scalar="true" scalar_type="String" navigates_to="location" />
			<scalar name="location" scalar_type="ParsedURL" hide="true" />
		</collection>
		<scalar name="about_the_authors" scalar_type="String" />
		<collection name="common_terms" child_type="term_type" child_extends="document">
			<scalar name="term" as_composite_scalar="true" navigates_to="location" scalar_type="String" />
			<scalar name="location" hide="true" scalar_type="ParsedURL" />
			<scalar name="frequency" scalar_type="Int" />
		</collection>
	</meta_metadata>

	<meta_metadata name="author" extends="compound_document" visibility="PACKAGE" schema_org_itemtype="http://schema.org/Person" comment="An author of an article or creative work.">
		<scalar name="location" hide="true" schema_org_itemprop="url"/>
		<scalar name="name" scalar_type="String" navigates_to="location" is_facet="true" as_composite_scalar="true" schema_org_itemprop="name" />
		<scalar name="affiliation" scalar_type="String" schema_org_itemprop="affiliation"/>
		<scalar name="city" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="book" extends="publication">
		<collection name="editors" child_type="author" />
		<scalar name="edition" scalar_type="String" />
		<collection name="table_of_contents" child_type="publication">
			<scalar name="title"  label="chapter title" />
		</collection>
		<scalar name="cover_image" scalar_type="ParsedURL" hide="true" />
	</meta_metadata>
	
	<meta_metadata name="publisher" extends="metadata" comment="A publishing company.">
		<scalar name="name" as_composite_scalar="true" navigates_to="location" is_facet="true" scalar_type="String" />
		<scalar name="city" scalar_type="String" />
	</meta_metadata>
	
</meta_metadata_repository>